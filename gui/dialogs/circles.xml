		  	<live>true</live>
		  	<halign>left</halign>
	        <binding>
	            <command>dialog-apply</command>
	      	</binding>
	      	<color>
	      		<red>0.5</red>
	      		<green>1</green>
	      		<blue>0.5</blue>
	      	</color>
		</input>
		<button>
			<legend>Clear</legend>
			<binding>
				<command>nasal</command>
				<script><![CDATA[
					setprop("f16/avionics/c4-lat", 0);
					setprop("f16/avionics/c4-lon", 0);
