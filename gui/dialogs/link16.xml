<?xml version="1.0"?>
<PropertyList>
	<name>link16</name>
  	<modal>false</modal>
  	<layout>vbox</layout>
  	<draggable>true</draggable>
    <resizable>true</resizable>
    <width>240</width>
    <height>570</height>

    <group>
		<layout>hbox</layout>
		<empty><stretch>1</stretch></empty>

		<text><label>Link 16 Tactical Data Link</label></text>

		<empty><stretch>1</stretch></empty>

		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend></legend>
			<default>1</default>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
			<binding>
				<command>dialog-apply</command>
			</binding>
		</button>
	</group>

	<hrule/>

  	<text>
	    <label>Datalink channel:</label>
	    <height>25</height>
	</text>

	<input>
	  	<width>250</width>
	  	<height>25</height>
	  	<label>Channel</label>
	  	<property>instrumentation/datalink/channel</property>
	  	<live>true</live>
	  	<halign>left</halign>
        <binding>
            <command>dialog-apply</command>
      	</binding>
      	<color>
			<red>0.5</red>
      		<green>1</green>
      		<blue>0.5</blue>
      	</color>
	</input>

	<empty><stretch>1</stretch></empty>

	<hrule/>

	<empty><stretch>1</stretch></empty>

</PropertyList>