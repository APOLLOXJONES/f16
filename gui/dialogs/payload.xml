<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>
  
  <name>payload</name>
  <modal type="bool">false</modal>
  <layout>vbox</layout>
  
  <group>
    <layout>hbox</layout>
    <empty>
      <stretch>1</stretch>
    </empty>
    
    <text>
      <label>Payload quick setup</label>
    </text>
    
    <empty>
      <stretch>1</stretch>
    </empty>
    
    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      
      <default>1</default>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </button>
  </group>

  <hrule/>
    <group>
        <layout>table</layout>
        <text>
            <row>0</row>
            <col>0</col>
            <label>Air patrol</label>
        </text>
        <button>
            <row>0</row>
            <col>1</col>
            <legend>Mount</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.a2a_patrol();</script>
            </binding>
        </button>

        <hrule>
            <row>1</row>
            <col>0</col>
            <colspan>2</colspan>
        </hrule>

        <text>
            <row>2</row>
            <col>0</col>
            <label>Air superiority</label>
        </text>
        <button>
            <row>2</row>
            <col>1</col>
            <legend>Mount</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.a2a_super();</script>
            </binding>
        </button>

        <hrule>
            <row>3</row>
            <col>0</col>
            <colspan>2</colspan>
        </hrule>

        <text>
            <row>4</row>
            <col>0</col>
            <label>Standoff</label>
        </text>
        <button>
            <row>4</row>
            <col>1</col>
            <legend>Mount</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.a2a_standoff();</script>
            </binding>
        </button>
        <hrule>
            <row>5</row>
            <col>0</col>
            <colspan>2</colspan>
        </hrule>

        <text>
            <row>6</row>
            <col>0</col>
            <label>Air to ground</label>
        </text>
        <button>
            <row>6</row>
            <col>1</col>
            <legend>Mount</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.a2g_standard();</script>
            </binding>
        </button>

        <hrule>
            <row>7</row>
            <col>0</col>
            <colspan>2</colspan>
        </hrule>

        <layout>hbox</layout>
        <text>
            <row>8</row>
            <col>0</col>
            <label>Bomb mission</label>
        </text>
        <button>
            <row>8</row>
            <col>1</col>
            <legend>Mount</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.a2g_bombs();</script>
            </binding>
        </button>

        <hrule>
            <row>9</row>
            <col>0</col>
            <colspan>2</colspan>
        </hrule>

        <text>
            <row>10</row>
            <col>0</col>
            <label>Air to sea</label>
        </text>
        <button>
            <row>10</row>
            <col>1</col>
            <legend>Mount</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.a2m_standard();</script>
            </binding>
        </button>
    </group>
</PropertyList>