<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>

	<name>scenario28</name>
	<layout>vbox</layout>

	<group>
		<layout>hbox</layout>
		<text>
			<halign>left</halign>
			<label>Mock dogfight training Scenario</label>
			<!--<format>%s Control Panel</format>
			<property>sim/description</property>-->
